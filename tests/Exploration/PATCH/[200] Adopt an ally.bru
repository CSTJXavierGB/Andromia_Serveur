meta {
  name: [200] Adopt an ally
  type: http
  seq: 1
}

patch {
  url: {{base_url}}/explorations/:explorationUUID/adopt
  body: none
  auth: inherit
}

params:path {
  explorationUUID: {{explorationUUID}}
}

assert {
  res.status: eq 200
  res.body: isJson
}

script:post-response {
  const urlInfo = res.body.href.split("/");
  bru.setEnvVar("allyUUID", urlInfo.reverse()[0]);
}
