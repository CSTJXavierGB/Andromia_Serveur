meta {
  name: [201] - Login
  type: http
  seq: 1
}

post {
  url: {{base_url}}/sessions
  body: json
  auth: inherit
}

body:json {
  {
    "username":"{{explorerUserName}}",
    "password":"{{explorerPassword}}"
  }
}

assert {
  res.status: eq 201
  res.body: isJson
  res.body.tokens: isDefined
}

script:post-response {
  bru.setEnvVar("explorerAccessToken", res.body.tokens.access);
  bru.setEnvVar("explorerRefreshToken", res.body.tokens.refresh);
}
